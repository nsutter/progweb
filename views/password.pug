extends layout

block content
  .container
    .row
      .col-md-2
      .col-md-8
        .center
          h1= title
          .well
            form(role='form', action='/changePassword', method='post', enctype='plain')
              .form-group
                p #{user.Login}
              .form-group
                label.gris(for='Login') Login
                input.form-control(type='text', name='Login', value=user.Login, required='required')
              .form-group
                label.gris(for='Mdp') Mot de passe
                input.form-control(type='password', name='Mdp', required='required')
              button.btn.btn-large.btn-success(type='submit') Modifier !
