extends ../layout

block content

  .container
    .row
      .col-md-2
      .col-md-8
        .center
          h1= title
          .well
            form(role='form', action='/administration/utilisateur/'+utilisateur[0].Login, method='post', enctype='plain')
              .form-group
                p #{utilisateur[0].Login}
              .form-group
                label.gris(for='Nom') Nom
                input.form-control(type='text', name='Nom', value=utilisateur[0].Nom, required='required')
              .form-group
                label.gris(for='Prenom') Prenom
                input.form-control(type='text', name='Prenom', value=utilisateur[0].Prenom, required='required')
              .form-group
                label.gris(for='DateNaissance') DateNaissance
                input.form-control(type='text', name='DateNaissance', value=utilisateur[0].DateNaissance, required='required')
              .form-group
                label.gris(for='Categorie') Categorie
                input.form-control(type='text', name='Categorie', value=utilisateur[0].Categorie, required='required')
              .form-group
                label.gris(for='NomEmission') NomEmission
                input.form-control(type='text', name='NomEmission', value=utilisateur[0].NomEmission, required='required')
              .form-group
                label.gris(for='Multilangue') Multilangue
                label.switch
                  if video[0].MultiLangue == "F"
                    input(type='checkbox', name="Multilangue")
                    .slider.round
                  else
                      input(type='checkbox', name="Multilangue", checked= "")
                      .slider.round
              .form-group
                label.gris(for='FormatImage') FormatImage
                input.form-control(type='text', name='FormatImage', value=video[0].FormatImage)
              .form-group
                label.gris(for='Duree') Duree
                input.form-control(type='text', name='Duree', value=video[0].Duree)
              .form-group
                label.gris(for='DateFinDroit') Date fin droit
                input.form-control(type='date', name="DateFinDroit", placeholder='Date fin de droit - (YYYY-MM-DD)', value=video[0].DateFinDroit)
              .form-group
                label.gris(for='DateFinDiff') Date fin diffusion
                input.form-control(type='date', name="DateFinDiff", placeholder='Date fin de diffusion - (YYYY-MM-DD)', value=video[0].DateFinDiff)
              .form-group
                label.gris(for='Pays') Pays
                input.form-control(type='text', name='Pays', value=video[0].Pays)

              button.btn.btn-large.btn-success(type='submit') Modifier !
            br
            form(role='form', action='/administration/deleteVideo/'+ video[0].IdVideo, method='post', enctype='plain', onsubmit="return confirm('Voulez vous vraiment supprimer votre cette video?');")
              button.btn.btn-large.btn-danger(type='submit') Supprimer la video !
