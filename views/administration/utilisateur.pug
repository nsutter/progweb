extends ../layout

block content

  .container
    .row
      .col-md-2
      .col-md-8
        .center
          h1= title
          .well
            form(role='form', action='/administration/utilisateur/'+utilisateur[0].Login, method='post', enctype='plain')
              .form-group
                p #{utilisateur[0].Login}
              .form-group
                label.gris(for='Nom') Nom
                input.form-control(type='text', name='Nom', value=utilisateur[0].Nom, required='required')
              .form-group
                label.gris(for='Prenom') Prenom
                input.form-control(type='text', name='Prenom', value=utilisateur[0].Prenom, required='required')
              .form-group
                label.gris(for='DateNaissance') DateNaissance
                input.form-control(type='text', name='DateNaissance', value=utilisateur[0].DateNaissance, required='required')
              .form-group
                label.gris(for='Email') Email
                input.form-control(type='text', name='Email', value=utilisateur[0].Email, required='required')
              .form-group
                label.gris(for='Newsletter') Newsletter
                label.switch
                  if utilisateur[0].Newsletter == "F"
                    input(type='checkbox', name="Newsletter")
                    .slider.round
                  else
                      input(type='checkbox', name="Newsletter", checked= "")
                      .slider.round
              .form-group
                label.gris(for='Admin') Admin
                label.switch
                  if utilisateur[0].Admin == "F"
                    input(type='checkbox', name="Admin")
                    .slider.round
                  else
                      input(type='checkbox', name="Admin", checked= "")
                      .slider.round
              .form-group
                label.gris(for='Nationalite') Nationalite
                input.form-control(type='text', name='Nationalite', value=utilisateur[0].Nationnalite)

              button.btn.btn-large.btn-success(type='submit') Modifier !
            br
            form(role='form', action='/administration/deleteUtilisateur/'+ utilisateur[0].Login, method='post', enctype='plain', onsubmit="return confirm('Voulez vous vraiment supprimer cet utilisateur ?');")
              button.btn.btn-large.btn-danger(type='submit') Supprimer l'utilisateur !
