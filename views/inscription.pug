extends layout

block content
  .container
    h1 Register Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/inscription",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="Login", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="Mdp", placeholder='Password')
      button.btn.btn-default(type='submit') Submit
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
