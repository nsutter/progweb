extends layout

block content

  .container-fluid
    .row
      .col-md-2.pull-left
        - var lgc = categories.length;
        - var ic = 0;
        h2 Liste des cat√©gories
        ul.nav.nav-pills.nav-stacked
          li.active(role='presentation')
            a(href='/') Toutes
          while ic < lgc
            li(role='presentation')
              a(href='/categorie/'+categories[ic]) #{categories[ic]}
            - ic = ic + 1;
      br
      .col-md-10
        .container
          - var lg = video.length;
          - var i = 0;
            if lg >= 1
              .row
                while i < lg
                  if i%3 == 0
                    .row
                  .col-lg-4.col-md-6.col-sm-12
                    .well
                      a(href="/video/"+video[i].IdVideo)
                        .center
                          img#img_accueil(src="http://img.youtube.com/vi/"+video[i].IdVideo+"/0.jpg")
                          h2
                            | #{video[i].NomEmission}
                          h3
                            | #{video[i].Description}
                          br
                          | Categorie: #{video[i].Categorie}
                        br
                        br
                  - i = i + 1
